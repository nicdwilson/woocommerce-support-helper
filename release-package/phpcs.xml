<?xml version="1.0"?>
<ruleset name="WooCommerce Support Helper">
	<description>Custom PHP CodeSniffer configuration for WooCommerce Support Helper plugin</description>

	<!-- Files to check -->
	<file>.</file>

	<!-- Exclude patterns -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/languages/*</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>

	<!-- Only check PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show progress and use colors -->
	<arg value="sp"/>
	<arg name="colors"/>

	<!-- Check up to 8 files simultaneously -->
	<arg name="parallel" value="8"/>

	<!-- Rules -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
		
		<!-- Allow multiple assignments -->
		<exclude name="Squiz.PHP.DisallowMultipleAssignments.Found"/>
		
		<!-- Allow yoda conditions to be optional -->
		<exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
		
		<!-- Exclude filename rules for main plugin file -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
	</rule>

	<!-- WordPress-Extra rules -->
	<rule ref="WordPress-Extra">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found"/>
	</rule>

	<!-- WordPress-Docs rules -->
	<rule ref="WordPress-Docs"/>

	<!-- Allow for plugin header in main file -->
	<rule ref="Squiz.Commenting.FileComment.Missing">
		<exclude-pattern>woocommerce-support-helper.php</exclude-pattern>
	</rule>

	<!-- Set minimum PHP version -->
	<config name="minimum_supported_wp_version" value="6.0"/>
	<config name="testVersion" value="7.4-"/>

	<!-- WordPress.WP.I18n: Check for correct text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="woocommerce-support-helper"/>
			</property>
		</properties>
	</rule>

	<!-- WordPress.NamingConventions.PrefixAllGlobals: Require prefixes for all global functions, classes, constants and variables -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="WC_Support_Helper"/>
				<element value="wc_support_helper"/>
				<element value="WooCommerceSupportHelper"/>
			</property>
		</properties>
	</rule>

	<!-- Allow plugin constants without prefix -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals.NonPrefixedConstantFound">
		<exclude-pattern>woocommerce-support-helper.php</exclude-pattern>
	</rule>
</ruleset>
